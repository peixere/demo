<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="main" basedir="." default="all">

	<target name="all" depends="clean,init,compile,jar" />

	<path id="lib">
		<fileset dir="./lib">
			<include name="comm3.0.jar" />
		</fileset>
	</path>

	<target name="init">
		<property name="dirs.base" value="${basedir}" />
		<property name="targetdir" value="${dirs.base}/bin" />
		<property name="classdir" value="${dirs.base}/bin" />
		<property name="src" value="${dirs.base}/src" />
		<property name="outputjar" value="${targetdir}/javax.comm-3.0.jar" />
		<mkdir dir="${classdir}" />
	</target>
	<target name="compile" depends="init">
		<mkdir dir="${classdir}" />
		<javac classpathref="lib" debug="true" destdir="${classdir}"
			includeantruntime="on" srcdir="${src}" />
	</target>

	<target name="jar">
		<jar destfile="${outputjar}" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="comm.demo.SerialDemo" />
			</manifest>
			<fileset dir="${classdir}" />
			<zipfileset excludes="META-INF/*.SF" src="${dirs.base}/lib/comm3.0.jar" />
		</jar>
	</target>

	<target name="clean" depends="init">
		<delete dir="${targetdir}" />
	</target>
</project>
